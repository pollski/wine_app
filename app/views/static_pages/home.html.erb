<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>

	<div class="center hero-unit">  
	<h1>Welcome to reWine</h1>
	<h3>The internet's wine wish list</h3>
	<p>
	  You know the bottles that you can't find anymore because you have to be on a private list, or you couldn't buy it fast enought,
	  and now they are only in people's private cellars? This is the place to ask and see if someone will sell you their's.
	</p>

	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>